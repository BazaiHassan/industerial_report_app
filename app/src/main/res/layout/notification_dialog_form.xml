<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:orientation="vertical">

    <ImageView
        android:layout_width="@dimen/_48sdp"
        android:layout_height="@dimen/_48sdp"
        android:layout_gravity="end"
        android:layout_margin="@dimen/_4sdp"
        android:src="@drawable/ic_alert" />

    <EditText
        android:id="@+id/et_title_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:background="@drawable/bg_text"
        android:hint="عنوان"
        android:padding="@dimen/_8sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_16sdp" />

    <EditText
        android:id="@+id/et_describe_notification"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_margin="@dimen/_8sdp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_text"
        android:gravity="top"
        android:hint="متن اعلان"
        android:inputType="text|textMultiLine"
        android:padding="@dimen/_8sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_16sdp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_text"
        android:gravity="center"
        android:layout_margin="@dimen/_8sdp"
        android:orientation="horizontal"
        android:padding="@dimen/_4sdp">

        <RadioButton
            android:id="@+id/common_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10sdp"
            android:checked="true"
            android:text="عمومی" />

        <RadioButton
            android:id="@+id/important_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10sdp"
            android:text="مهم" />

        <RadioButton
            android:id="@+id/very_important_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="بسیار مهم" />
    </RadioGroup>

    <Button
        android:id="@+id/btn_submit_alert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20sdp"
        android:text="ایجاد اعلان" />

    <ProgressBar
        android:id="@+id/pb_submit_alert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="gone" />


</LinearLayout>