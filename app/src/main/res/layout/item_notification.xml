<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/colored_right_side"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_4sdp"
            android:background="@color/google_yellow" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_95sdp"
            android:padding="@dimen/_13sdp">

            <TextView
                android:id="@+id/title_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="عنوان اعلان"
                android:lines="1"
                android:maxLines="1"
                android:layout_alignParentStart="true"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold" />
            <ImageView
                android:src="@drawable/ic_notifications"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/description_notification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:maxLines="1"
                android:layout_below="@id/title_notification"
                android:layout_marginTop="8dp"
                android:text="شرح اعلان"
                android:textSize="@dimen/_11sdp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/description_notification"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/_4sdp">

                <ImageView
                    android:id="@+id/user_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_user" />

                <TextView
                    android:id="@+id/user_notification"
                    android:textSize="@dimen/_9sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_toEndOf="@+id/user_icon"
                    android:text="نویسنده" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/description_notification"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_4sdp">

                <ImageView
                    android:id="@+id/date_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_time" />

                <TextView
                    android:id="@+id/date_notification"
                    android:textSize="@dimen/_8sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_9sdp"
                    android:layout_toEndOf="@+id/date_icon"
                    android:text="تاریخ ثبت" />
            </RelativeLayout>


        </RelativeLayout>
    </LinearLayout>




</androidx.cardview.widget.CardView>
