<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".pages.user_page.auth.LoginActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="@dimen/_148sdp"
        android:layout_height="@dimen/_148sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_108sdp"
        android:src="@drawable/login_image_phone" />

    <EditText
        android:id="@+id/et_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_36sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_48sdp"
        android:background="@drawable/bg_text"
        android:ems="10"
        android:hint="شماره همراه"
        android:inputType="number"
        android:maxLength="11"
        android:textAlignment="center" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/btn_phone_check"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_36sdp"
            android:background="@drawable/bg_btn"
            android:backgroundTint="@color/google_green"
            android:text="بررسی شماره"
            android:textColor="@color/white"
            android:visibility="visible" />

        <ProgressBar
            android:id="@+id/pb_check_phone"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_36sdp"
            android:visibility="visible" />

    </FrameLayout>


</LinearLayout>