<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pages.user_page.auth.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/_148sdp"
            android:layout_height="@dimen/_148sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_108sdp"
            android:src="@drawable/login_image_phone" />

        <EditText
            android:id="@+id/et_invite_code"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_36sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_48sdp"
            android:background="@drawable/bg_text"
            android:ems="10"
            android:hint="کد دعوت به گروه"
            android:inputType="text"
            android:textAlignment="center" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="visible">

            <Button
                android:id="@+id/btn_invite_code_check"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_36sdp"
                android:background="@drawable/bg_btn"
                android:backgroundTint="@color/google_green"
                android:text="بررسی کد"
                android:textColor="@color/white"
                android:visibility="visible" />

            <ProgressBar
                android:id="@+id/pb_check_invite_code"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_36sdp"
                android:visibility="gone" />

        </FrameLayout>

        <Button
            android:id="@+id/btn_create_group"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_36sdp"
            android:background="@drawable/bg_btn"
            android:backgroundTint="@color/dark_gray"
            android:text="ساخت گروه"
            android:textColor="@color/white"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/lnr_response_check_invite_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_gray"
            android:layoutDirection="rtl"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_group_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/google_red" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_4sdp">

                <ImageView
                    android:id="@+id/icon_profile_1"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/bg_circle_icon"
                    android:padding="@dimen/_4sdp"
                    android:src="@drawable/ic_group" />

                <TextView
                    android:id="@+id/tv_group_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_toEndOf="@id/icon_profile_1"
                    android:text="نام گروه"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_12sdp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_4sdp">

                <ImageView
                    android:id="@+id/icon_profile_2"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/bg_circle_icon"
                    android:padding="@dimen/_4sdp"
                    android:src="@drawable/ic_admin_panel" />

                <TextView
                    android:id="@+id/tv_group_admin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_toEndOf="@id/icon_profile_2"
                    android:text="مدیریت گروه"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_12sdp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_4sdp">

                <ImageView
                    android:id="@+id/icon_profile_3"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/bg_circle_icon"
                    android:padding="@dimen/_4sdp"
                    android:src="@drawable/ic_document_profile" />

                <TextView
                    android:id="@+id/tv_group_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_toEndOf="@id/icon_profile_3"
                    android:text="توضیحات گروه"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_12sdp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_phone_validation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_4sdp"
                android:visibility="gone">

                <EditText
                    android:id="@+id/et_phone_number"
                    android:layout_width="@dimen/_180sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/bg_text"
                    android:hint="شماره موبایل شما"
                    android:inputType="number"
                    android:padding="@dimen/_4sdp"
                    android:textAlignment="center" />

                <Button
                    android:id="@+id/btn_validate_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_toEndOf="@id/et_phone_number"
                    android:background="@drawable/bg_btn"
                    android:backgroundTint="@color/google_green"
                    android:text="عضویت در گروه"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_code_validation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_4sdp"
                android:visibility="gone">

                <EditText
                    android:id="@+id/et_code"
                    android:layout_width="@dimen/_180sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/bg_text"
                    android:hint="کد فعال سازی"
                    android:inputType="number"
                    android:padding="@dimen/_4sdp"
                    android:textAlignment="center" />

                <Button
                    android:id="@+id/btn_validate_code"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_toEndOf="@id/et_code"
                    android:background="@drawable/bg_btn"
                    android:backgroundTint="@color/google_green"
                    android:text="بررسی کد"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />

            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>