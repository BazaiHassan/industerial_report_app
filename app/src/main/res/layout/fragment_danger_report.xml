<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    tools:context=".pages.report_page.create_forms.DangerReportFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_header_permit_report"
            android:padding="@dimen/_4sdp">

            <ImageView
                android:id="@+id/btn_close_risk"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:src="@drawable/ic_close" />

            <TextView
                android:id="@+id/risk_report_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="گزارش ریسک"
                android:textColor="@color/white"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold" />
        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_4sdp"
                    android:padding="@dimen/_4sdp">

                    <ImageView
                        android:id="@+id/user_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_user" />

                    <TextView
                        android:id="@+id/et_user_risk_report"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_toEndOf="@+id/user_icon"
                        android:hint="نام کاربری تولید کننده گزارش" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_4sdp"
                    android:padding="@dimen/_4sdp">

                    <ImageView
                        android:id="@+id/time_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_time" />

                    <TextView
                        android:id="@+id/tv_risk_date_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_toEndOf="@+id/time_icon"
                        android:text="تاریخ ثبت گزارش" />
                </RelativeLayout>

                <EditText
                    android:id="@+id/et_title_risk_report"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_margin="@dimen/_4sdp"
                    android:background="@drawable/bg_dash_btn"
                    android:hint="عنوان گزارش"
                    android:lines="1"
                    android:padding="@dimen/_4sdp"
                    android:textSize="@dimen/_16sdp" />

                <EditText
                    android:id="@+id/et_unit_risk_report"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_margin="@dimen/_4sdp"
                    android:background="@drawable/bg_dash_btn"
                    android:hint="شماره واحد فرایندی"
                    android:lines="1"
                    android:padding="@dimen/_4sdp"
                    android:textSize="@dimen/_16sdp" />

                <EditText
                    android:id="@+id/et_instrument_risk_report"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_margin="@dimen/_4sdp"
                    android:background="@drawable/bg_dash_btn"
                    android:hint="نام تجهیز"
                    android:lines="1"
                    android:padding="@dimen/_4sdp"
                    android:textSize="@dimen/_16sdp" />

                <EditText
                    android:id="@+id/et_description_risk_report"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_180sdp"
                    android:layout_margin="@dimen/_4sdp"
                    android:background="@drawable/bg_dash_btn"
                    android:gravity="top"
                    android:hint="توضیحات تکمیلی"
                    android:inputType="text|textMultiLine"
                    android:padding="@dimen/_4sdp"
                    android:textSize="@dimen/_16sdp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:background="@drawable/bg_dash_btn"
                    android:drawableStart="@drawable/ic_add_image"
                    android:drawablePadding="8dp"
                    android:padding="8dp"
                    android:text="اضافه کردن عکس"
                    android:textColor="@color/google_blue"
                    android:textSize="16sp" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

    <Button
        android:id="@+id/btn_create_risk_report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="@dimen/_8sdp"
        android:background="@drawable/bg_btn"
        android:backgroundTint="@color/google_green"
        android:text="ارسال گزارش"
        android:textColor="@color/white" />
    <ProgressBar
        android:id="@+id/pb_submit_form"
        android:visibility="gone"
        android:layout_gravity="bottom|center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</FrameLayout>